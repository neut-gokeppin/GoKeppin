<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/BCNO_H0_confirm"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/KS_ED_BCNO_H0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:inputType="none"
        android:maxLength="3"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:selectAllOnFocus="true"
        android:textSize="80sp" />

    <TextView
        android:id="@+id/txtSyain"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/BNO_confirm"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/KS_ED_BODYNO"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:inputType="textCapCharacters"
        android:maxLength="5"
        android:selectAllOnFocus="true"
        android:textSize="112sp" />

    <Button
        android:id="@+id/BL_BT_OK"
        android:layout_width="fill_parent"
        android:layout_height="104dp"
        android:layout_marginBottom="16dp"
        android:text="@string/OK"
        android:textSize="64sp" />

    <Button
        android:id="@+id/BL_BT_CANCEL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        android:text="@string/Cansel"
        android:textSize="24sp" />

</LinearLayout>